generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id
  name               String?
  password           String
  phone              String?
  email              String?
  licensePlateNumber String[]
  role               Role
  status             Status?
  parkingSpaces      ParkingSpace[]

}

enum Role {
  staff
  admin
  guard
}

enum Status {
  common
  difficulty
  disability
}

model ParkingSpace {
  id                 Int       @id @default(autoincrement())
  spaceId            String    @unique
  state              State
  status               Status
  startTime          Int?      
  occupant           String?     
  floor              Int
  slot               Int
  licensePlateNumber String?  
  user               User?     @relation(fields: [occupant], references: [id])
 
}

enum State{
  available
  occupied
  error
}